<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/actionCollectLaylout">
    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/realtime_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/action_collect_title_txt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_colect_remain_txt">

        <Button
            android:id="@+id/Angle_0"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="0°" />

        <Button
            android:id="@+id/Angle_45"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="45°" />

        <Button
            android:id="@+id/Angle_90"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="90°" />

        <Button
            android:id="@+id/Angle_135"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="135°" />

        <Button
            android:id="@+id/Angle_180"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="180°" />

        <Button
            android:id="@+id/Angle_225"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="225°" />

        <Button
            android:id="@+id/Angle_270"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="270°" />

        <Button
            android:id="@+id/Angle_315"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="315°" />


    </LinearLayout>
    <TextView
            android:id="@+id/action_colect_remain_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/action_collect_title_txt"
            android:gravity="center"
            android:textColor="#ff3030"
            android:textStyle="bold"
            android:text="00"/>
    <TextView
            android:id="@+id/action_collect_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/action_colect_remain_txt"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/action_collect_start_btn"
            android:gravity="center"
            android:text="Action"/>

    <Button
            android:id="@+id/action_colect_acc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/action_collect_title_txt"
            android:layout_marginStart="20dp"
            android:text="ACC"/>
    <Button
            android:id="@+id/action_colect_gyr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/action_colect_acc_btn"
            android:text="GYR"/>

    <Button
        android:id="@+id/action_collect_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/action_collect_stop_btn"
        android:background="@drawable/button_style"
        android:enabled="false"
        android:text="Start" />
    <Button
            android:id="@+id/action_collect_stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="Stop"/>
</RelativeLayout>