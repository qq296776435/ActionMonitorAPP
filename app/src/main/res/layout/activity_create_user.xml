<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="jnu.action3.CreateUserActivity">

    <TextView
            android:id="@+id/create_user_uid_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="TEXT"/>

    <LinearLayout
            android:id="@+id/create_user_age_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/create_user_uid_txt"
            android:layout_marginTop="20sp"
            android:gravity="center">
        <TextView
                android:id="@+id/create_user_age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Age:"/>
        <EditText
                android:id="@+id/create_user_age_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="12"
                android:layout_marginStart="20sp"
                android:hint="your age"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/create_user_height_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/create_user_age_linear"
            android:layout_marginTop="20sp"
            android:gravity="center">
        <TextView
                android:id="@+id/create_user_height_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Height:"/>
        <EditText
                android:id="@+id/create_user_height_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="12"
                android:layout_marginStart="20sp"
                android:hint="height in (m), 2 decimal point"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/create_user_weight_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/create_user_height_linear"
            android:layout_marginTop="20sp"
            android:gravity="center">
        <TextView
                android:id="@+id/create_user_weight_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Weight:"/>
        <EditText
                android:id="@+id/create_user_weight_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="12"
                android:layout_marginStart="20sp"
                android:hint="weight in (kg), 2 decimal point"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/create_user_gender_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_user_weight_linear"
            android:layout_marginTop="20dp" >
        <TextView
                android:id="@+id/create_user_gender_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Gender:"/>
        <RadioGroup
                android:id="@+id/create_user_gender_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">
            <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male"/>
            <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginStart="20dp"
                    android:text="Female"/>
        </RadioGroup>
    </LinearLayout>

    <Button
            android:id="@+id/create_user_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="OK"/>
</RelativeLayout>
